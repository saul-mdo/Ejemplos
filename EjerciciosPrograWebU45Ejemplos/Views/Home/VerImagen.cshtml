<h1>VerImagen</h1>

<img src="data:image/png;base64," />

<h1>Codificar un string</h1>
@{ 
    // CODIFICACIÓN DE UN STRING

    // DE STRING A BASE64
    string mensaje = "HECTOR SAUL MALDONADO GOMEZ>>>SISTEMAS>>>171G0235>>>ITESRC";
    byte[] datos = System.Text.Encoding.UTF8.GetBytes(mensaje); // CONVIERTE EL TEXTO EN UN ARREGLO DE BYTES
    string salida = Convert.ToBase64String(datos); // EL ARREGLO DE BYTES SE CONVIERTE A BASE64

    // DE BASE64 A STRING
    byte[] datos2 = Convert.FromBase64String(salida); // SE OBTIENEN LOS BYTES DEL CODIGO DE 64BITS
    string original = System.Text.Encoding.UTF8.GetString(datos2); // LO REGRESA A UN STRING


    // CODIFICACION DE UN ARCHIVO
    // ARCHIVO A BASE64
    var bytesArchivo = System.IO.File.ReadAllBytes("wwwroot/htmlpage.html");
    string salidaarchivo = Convert.ToBase64String(bytesArchivo);




}
@salida = @original <br />
@salidaarchivo
